{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022"],
    "module": "NodeNext",
    "skipLibCheck": true,
    "esModuleInterop": true,

    /* build */
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": true,

    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "noEmit": false,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "./src/*.ts"
  ]
}
